<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="sale_order_form_ihnerit" model="ir.ui.view">
			<field name="name">
				sale.order.form.inherit
			</field>
			<field name="model">
				sale.order
			</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_id']" position="replace">
					<field name="is_commercial" invisible="1" />
					<field name="partner_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}" options="{&quot;always_reload&quot;: True,&quot;always_reload&quot;: _get_default_commercial()}" />
				</xpath>
			</field>
		</record>
	</data>
</odoo>
