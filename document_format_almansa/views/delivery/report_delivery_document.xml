<odoo>
    <data>
        <template id="document_format_almansa.report_delivery_document_almansa" inherit_id="stock.report_delivery_document">
            <!-- Quitar direccion defecto odoo -->
            <xpath expr="//t[@name='partner_header']" position="replace">
            </xpath>
            <!-- Fin quitar dirección defecto odoo -->
            <xpath expr="//div[@class='page']" position="replace">
                <!--  Primera columna (Datos doc) -->
                <div style="float:left; width:50%;">
                    <div>
                      <h2 class="mt16">
                        <span style="width:25%;">Albarán :</span>
                        <span style="width:75%;" t-field="o.name"/>
                        </h2>
                    </div>
                    <div>
                        <b><span style="width:25%;">Fecha :</span></b>
                        <span style="width:75%;" t-field="o.date_done" t-options="{'format': 'dd/MM/yyyy'}"/>
                    </div>
                    <div t-if="o.origin">
                        <b><span style="width:25%;">Pedido: </span></b>
                        <span style="width:75%;" t-field="o.origin"/>
                    </div>
                </div>
                <!--  Fin primera columna (Datos doc)  -->
                <!-- Segunda columna (Datos cliente) -->
                <div style="float:left; width:50%;">
                    <div>
                        <span style="display:inline-block;width:80%;" t-field="o.partner_id.display_name"/>
                    </div>
                    <div t-if="o.partner_id.street">
                        <span t-field="o.partner_id.street"/>
                    </div>
                    <div>
                        <t t-if="o.partner_id.zip">
                            <span t-field="o.partner_id.zip"/>
                        </t>
                        <t t-if="o.partner_id.city">
                            <span t-field="o.partner_id.city"/>
                        </t>
                        <t t-if="o.partner_id.state_id">
                            <span>,</span>
                            <span t-field="o.partner_id.state_id.name"/>
                            <span></span>
                        </t>
                    </div>
                    <div t-if="o.partner_id.vat">
                        <span style="width:20%;">NIF: </span>
                        <span style="width:80%;" t-field="o.partner_id.vat"/>
                    </div>
                    <!--  Fin segunda columna (Datos client)  -->
                </div>
                <!-- Fin datos documento -->
                <!-- Separador -->
                    <!--<hr style="height:2px;width:101%;background-color:black;margin-left:-15px;margin-top:20px;clear:both;"/>-->
                <!-- Fin separador -->
                <!--cabecera -->
                 <table class="table" style="font-size:0.9em;border-bottom:3px solid black;">
                   <t t-set="is_discounted" t-value="0"/>
                   <t t-foreach="o.move_line_ids" t-as="move_line">
                     <t t-if="move_line.sale_discount != 0.00">
                       <t t-set="is_discounted" t-value="1"/>
                     </t>
                    </t>
                   <thead style="border-bottom: 1px solid grey;">
                      <tr style="border-top:4px solid black;">
                        <th style="padding:0px;margin:0px;border-bottom:2px solid black;">
                            <div style="clear:both;5px;width:100%;color:black;">
                              <div style="width:15%;display:block;float:left;">
                                <span>
                                  <b>CÓDIGO</b>
                                </span>
                              </div>
                              <t t-if="is_discounted != 0">
                                <div style="width:30%;display:block;float:left;">
                                  <span>
                                    <b>Descripción</b>
                                  </span>
                                </div>
                                <div style="width:10%;display:block;float:left;text-align:right;">
                                  <span>
                                    <b>UNDS</b>
                                  </span>
                                </div>
                                <div style="width:10%;display:block;float:left;text-align:right;">
                                  <span>
                                    <b>IMPORTE</b>
                                  </span>
                                </div>
                                <div style="width:10%;display:block;float:left;text-align:right;">
                                  <span>
                                    <b>DTO. %</b>
                                  </span>
                                </div>
                                <div style="width:10%;display:block;float:left;text-align:right;">
                                  <span>
                                    <b>IVA %</b>
                                  </span>
                                </div>
                                <div style="width:15%;display:block;float:left;text-align:right;">
                                  <span>
                                    <b>TOTAL</b>
                                  </span>
                                </div>
                              </t>
                              <t t-else="">
                                <div style="width:40%;display:block;float:left;">
                                  <span>
                                    <b>Descripción</b>
                                  </span>
                                </div>
                                <div style="width:10%;display:block;float:left;text-align:right;">
                                  <span>
                                    <b>UNDS</b>
                                  </span>
                                </div>
                                <div style="width:10%;display:block;float:left;text-align:right;">
                                  <span>
                                    <b>IMPORTE</b>
                                  </span>
                                </div>
                                <div style="width:10%;display:block;float:left;text-align:right;">
                                  <span>
                                    <b>IVA %</b>
                                  </span>
                                </div>
                                <div style="width:15%;display:block;float:left;text-align:right;">
                                  <span>
                                    <b>TOTAL</b>
                                  </span>
                                </div>
                              </t>
                            </div>
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        <t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')"/>
                        <t t-foreach="o.move_line_ids" t-as="move_line">
                          <tr>
                            <td style="padding:0px;margin:0px;border:none;">
                              <div style="width:15%;display:block;clear:both;float:left;">
                                <span t-field="move_line.product_id.default_code"/>
                              </div>
                              <t t-if="is_discounted != 0">
                                <div style="width:30%;display:block;float:left;">
                                  <span t-field="move_line.product_id.name"/>
                                </div>
                                 <div style="width:10%;display:block;float:left;text-align:right;">
                                   <span t-field="move_line.qty_done"/>
                                 </div>
                                <div style="width:10%;display:block;float:left;text-align:right;">
                                  <span t-field="move_line.sale_price_unit"/>
                                </div>
                                <div style="width:10%;display:block;float:left;text-align:right;">
                                  <span t-field="move_line.sale_discount"/>
                                </div>
                                <div style="width:10%;display:block;float:left;text-align:right;">
                                  <t t-foreach="move_line.sale_tax_id" t-as="tax">
                                    <span t-esc="'%.1f'%tax.amount"/>
                                  </t>
                                </div>
                                <div style="width:15%;display:block;float:left;text-align:right;">
                                  <span t-field="move_line.sale_price_subtotal"/>
                                </div>
                              </t>
                              <t t-else="">
                                <div style="width:40%;display:block;float:left;">
                                  <span t-field="move_line.product_id.name"/>
                                </div>
                                 <div style="width:10%;display:block;float:left;text-align:right;">
                                   <span t-field="move_line.qty_done"/>
                                 </div>
                                <div style="width:10%;display:block;float:left;text-align:right;">
                                  <span t-field="move_line.sale_price_unit"/>
                                </div>
                                <div style="width:10%;display:block;float:left;text-align:right;">
                                  <t t-foreach="move_line.sale_tax_id" t-as="tax">
                                    <span t-esc="'%.1f'%tax.amount"/>
                                  </t>
                                </div>
                                <div style="width:15%;display:block;float:left;text-align:right;">
                                  <span t-field="move_line.sale_price_subtotal"/>
                                </div>
                              </t>
                            </td>
                          </tr>
                        </t>

                      </tbody>
                  </table>
                  <table class="table" style="width:45%;margin-left:55%;border-bottom:3px solid black;">
                    <tr style="border-bottom:1px solid grey;padding:0px;margin:0px;">
                      <td style="padding:0px;margin:0px;">
                        <b><span>Subtotal</span></b>
                      </td>
                      <td style="padding:0px;margin:0px;text-align:right;">
                        <span t-field="o.amount_untaxed"></span>
                      </td>
                    </tr>
                    <tr style="border-bottom:1px solid grey;padding:0px;margin:0px;">
                      <td style="padding:0px;margin:0px;">
                        <b><span>Impuestos</span></b>
                      </td>
                      <td style="padding:0px;margin:0px;text-align:right;">
                        <span t-field="o.amount_tax"></span>
                      </td>
                    </tr>
                    <tr style="border-bottom:1px solid grey;padding:0px;margin:0px;">
                      <td style="padding:0px;margin:0px;">
                        <b><span>Total</span></b>
                      </td>
                      <td style="padding:0px;margin:0px;text-align:right;">
                        <span t-field="o.amount_total"></span>
                      </td>
                    </tr>

                  </table>
                  <t t-if="o.note">
                    <p><span t-field="o.note"/></p>
                  </t>


            </xpath>
        </template>
    </data>
</odoo>
