<odoo>
    <data>
        <template id="document_format_almansa.external_layout_clean_almansa" inherit_id="web.external_layout_clean">
           <!--  Header  -->
            <xpath expr="//div[@class='o_clean_header']" position="replace">
                <div>
                    <div class="col-6" style="display:block; width:40%;float:left;">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo" style="width:100%"/>
                    </div>
                    <div style="width:40%; display:block;float:right;">
                        <strong>
                            <div t-if="company.name">
                                <span style="color:black; margin-bottom:0px" t-field="company.name"/>
                            </div>
                        </strong>

                        <div class="col-5 offset-1" name="company_address" style="color:black; display:inline; width:50%;font-size:0.8em;">
                            <div style="width:50%; display:block; float:left">
                                <span>
                                    <!-- <strong>Direcci√≥n</strong> -->
                                </span>
                                <ul class="list-unstyled">

                                    <li>
                                        <div t-if="company.street" style="display:inline-block">
                                            <span t-field="company.street"/>
                                        </div>
                                    </li>
                                    <li>
                                        <div t-if="company.street2" style="display:inline-block">
                                            <span t-field="company.street2"/>
                                        </div>
                                    </li>
                                    <li>
                                      <div t-if="company.city" style="display:inline">
                                            <span t-field="company.city"/>
                                                ,
                                        </div>
                                        <div t-if="company.zip" style="display:inline">
                                            <span t-field="company.zip"/>
                                        </div>
                                         <div t-if="company.state_id" style="display:inline;">
                                            <span t-field="company.state_id.name"/><span>(ES)</span>
                                        </div>

                                    </li>

                                    <li t-if="company.vat">
                                        <spam>N.I.F. </spam>
                                        <span t-field="company.vat"/>
                                    </li>
                                    <li t-if="company.phone">
                                        <spam>TLF:</spam>
                                        <span t-field="company.phone"/>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
                <hr style="height:3px;background-color:black;width:100%;clear:both;"></hr>
            </xpath>
            <!--  Fin Header  -->
            <!--  Footer  -->
            <xpath expr="//div[@class='row mt8']" position="replace">
               <t t-if="invoice_number">
                    <span t-esc="invoice_number"/>
                  </t>
             <div class="row mt8">
                    <div class="col-6">
                         <t t-if="not is_purchase">
                             <span t-field="company.report_footer" />
                         </t>
                        <t t-else="">
                        </t>
                    </div>
                    <div class="col-4 text-right">
                        <span
                            class="company_address"
                            t-field="company.partner_id"
                            t-options='{"widget": "contact", "fields": ["email", "phone"], "no_marker": true}'
                        />
                    </div>
                    <div class="col-2">
                        <ul
                            t-if="report_type == 'pdf'"
                            class="list-inline pagenumber float-right text-center"
                        >
                            <li class="list-inline-item">
                                <strong>
                                    <span class="page" />
                                    /
                                    <span class="topage" />
                                </strong>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row mt8">
                    <div class="col-12">
                        <span
                            style="font-size: 10px; line-height: 0px;"
                            t-field="company.report_header"
                        />
                    </div>
                </div>
                <div class="row mt8">
                    <div class="col-12">
                        <span
                            style="font-size: 10px; line-height: 0px;"
                            t-field="company.company_registry"
                        />
                    </div>
                </div>
            </xpath>
            <!--  Fin footer  -->
        </template>
    </data>
</odoo>
